<h2><%= I18n.t('devise.sessions.new.heading') %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email, I18n.t('devise.sessions.new.form.email') %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password, I18n.t('devise.sessions.new.form.password') %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, I18n.t('devise.sessions.new.form.remember_me') %></div>
  <% end -%>

  <div><%= f.submit I18n.t('devise.sessions.new.actions.sign_in') %></div>
<% end %>

<%= render "devise/shared/links" %>
