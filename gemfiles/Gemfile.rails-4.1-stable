# frozen_string_literal: true

source "https://rubygems.org"

gemspec path: ".."

gem "nokogiri"
gem "omniauth"
gem "omniauth-oauth2"
gem "rails", "~> 4.1.0"
gem "rdoc"

group :test do
  gem "mocha", require: false
  gem "omniauth-facebook"
  gem "omniauth-openid"
  gem "timecop"
  gem "webrat", require: false
  gem 'test_after_commit', require: false
end

group :active_record do
  gem "sqlite3", "~> 1.3.6"
end

group :mongoid do
  gem "mongoid", "~> 4.0"
end
