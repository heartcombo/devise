<h2><%= t('devise.passwords.edit.title') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: t('devise.passwords.edit.labels.password'), required: true, autofocus: true, hint: (t('devise.passwords.edit.hints.password', length: @minimum_password_length) if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: t('devise.passwords.edit.labels.password_confirmation'), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('devise.passwords.edit.submit') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
